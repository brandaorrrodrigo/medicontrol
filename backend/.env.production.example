# Server Configuration
NODE_ENV=production
PORT=3001

# Frontend URL
FRONTEND_URL=https://medicontrol-six.vercel.app

# Database (PostgreSQL - Railway fornece automaticamente)
DATABASE_URL=postgresql://user:password@host:port/database

# JWT Authentication Secrets (GERAR NOVOS TOKENS!)
# Use: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
JWT_SECRET=CHANGE_THIS_TO_A_RANDOM_BASE64_STRING_32_BYTES
JWT_REFRESH_SECRET=CHANGE_THIS_TO_ANOTHER_RANDOM_BASE64_STRING_32_BYTES
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Email Configuration (Gmail App Password)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=seu-email@gmail.com
SMTP_PASS=sua-senha-app-gmail-16-digitos
EMAIL_FROM=noreply@mediccontrol.com

# File Upload
UPLOAD_DIR=uploads
MAX_FILE_SIZE=5242880

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
